// Model to store friend location events from VRChat
model FriendLocation {
  id           Int      @id @default(autoincrement())
  vrcUserId    String @unique  // VRChat user ID of the friend
  location     String  // The location string (can be worldId:instanceId, or special values)
  worldId      String? // The worldId if available
  travelingTo  String? // The travelingToLocation if present
  eventTime    DateTime @default(now()) // When the event was received
}
