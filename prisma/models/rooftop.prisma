model Announcement {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  createdBy String? // Discord user ID

  @@map("announcements")
}

model SpinTheBottleResponse {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  createdBy String? // Discord user ID

  @@map("spin_the_bottle_responses")
}
