{
  "name": "shield-bot",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "prisma": {
    "schema": "./prisma"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json && node scripts/copy-prisma.js",
    "build:prod": "tsc -p ./tsconfig.json && node scripts/copy-prisma.js",
    "build:changelog": "npx @discordx/changelog --src src",
    "dev": "ts-node-esm src/main.ts",
    "start": "ENV=development node build/main.js",
    "start:prod": "node build/main.js",
    "watch": "nodemon --exec ts-node-esm src/main.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org jasmeow-systems --project jasmeow-systems-bot ./build && sentry-cli sourcemaps upload --org jasmeow-systems --project jasmeow-systems-bot ./build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@discordx/importer": "^1.3.1",
    "@discordx/koa": "^1.2.2",
    "@discordx/pagination": "^4.4.0",
    "@discordx/utilities": "^8.0.0",
    "@koa/bodyparser": "^6.0.0",
    "@koa/multer": "^4.0.0",
    "@koa/router": "^14.0.0",
    "@prisma/adapter-mariadb": "^7.0.1",
    "@prisma/client": "7.0.1",
    "axios": "^1.13.2",
    "discord.js": "^14.25.1",
    "discordx": "^11.13.2",
    "dotenv": "^17.2.3",
    "koa": "^3.1.1",
    "multer": "2.0.2",
    "mysql": "^2.18.1",
    "node-cron": "^4.0.5",
    "node-fetch": "^3.3.2",
    "openpgp": "^6.2.2",
    "otplib": "^12.0.1",
    "vrc-ts": "^1.0.17",
    "vrchat": "^2.20.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/koa": "^3.0.1",
    "@types/koa__multer": "^2.0.8",
    "@types/koa__router": "^12.0.5",
    "@types/mysql": "^2.15.26",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.0",
    "prisma": "7.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "yarn@1.22.22"
}
